// kadane's Algorithm

const arr=[-2,1,-3,4,-1,2,1,-5,4];
console.log(maxSubArr(arr));

// sum=0
//max=0
//if(sum>max){max=sum}
//if(sum<0) sum=0
function maxSubArr(arr){
    let sum=0;
    let max=arr[0];
    for(let i=0;i<arr.length;i++){
        sum+=arr[i];
        if(sum>max){
            max=sum;
        }
        if(sum<0){
            sum=0;
        }
    }
    return max;
}
